{
  "include": [
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*",
    "panjang.ts"
  ],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": ["node"],
    "esModuleInterop": true,
    "target": "es2016",
    "lib": ["es2016"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
